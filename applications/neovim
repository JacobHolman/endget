NVIM_DIR="$HOME/.local/nvim"
BIN_DIR="$HOME/.local/bin"
mkdir -p "$NVIM_DIR"
mkdir -p "$BIN_DIR"
NEOVIM_VERSION="0.5.1"
NEOVIM_ARCHIVE="nvim-linux64.tar.gz"
wget "https://github.com/neovim/neovim/releases/download/v${NEOVIM_VERSION}/${NEOVIM_ARCHIVE}"
tar -xzf "$NEOVIM_ARCHIVE" -C "$NVIM_DIR"
ln -s "$NVIM_DIR/nvim-linux64/bin/nvim" "$BIN_DIR/nvim"
rm "$NEOVIM_ARCHIVE"
sudo mv ~/.local/bin/nvim /usr/bin/
