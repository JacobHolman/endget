BIN_DIR="$HOME/.local/bin"
mkdir -p "$BIN_DIR"
VIM_VERSION="8.2.3456
VIM_ARCHIVE="vim-${VIM_VERSION}.tar.gz"
wget "https://ftp.gnu.org/pub/gnu/vim/${VIM_ARCHIVE}"
tar -xzf "$VIM_ARCHIVE"
cd "vim${VIM_VERSION}"
./configure --prefix="$HOME/.local"
make
make install
cd ..
rm -rf "vim${VIM_VERSION}" "$VIM_ARCHIVE"
sudo chmod +x $BIN_DIR/vim
ln -s "$HOME/.local/bin/vim" "$BIN_DIR/vim"
